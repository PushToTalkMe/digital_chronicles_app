generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String  @default("")
  login        String  @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt @default(now())

  @@map("users")
}

enum UserRole {
  ADMIN
  CUSTOMER
  TECHNICAL_CUSTOMER
  CONTRACTOR
}